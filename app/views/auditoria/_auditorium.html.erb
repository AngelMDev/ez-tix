<li id="auditorium_<%= auditorium.id %>">
  <%= "Auditorium #{auditorium.name}"%>
  <%= "- capacity: #{auditorium.capacity} |"  %>
  <%= link_to "edit", edit_auditorium_path(auditorium), class: "btn btn-info btn-sm" %>
  <%= link_to "remove", auditorium, method: :delete, remote: true, data: { confirm: "are you sure?" }, class: "btn btn-danger btn-sm" %>
</li>